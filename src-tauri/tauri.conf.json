{
  "build": {
    "beforeDevCommand": "pnpm -C frontend build && node scripts/desktop/prepare-sidecar.js --debug",
    "beforeBuildCommand": "pnpm -C frontend build && node scripts/desktop/prepare-sidecar.js --release",
    "devPath": "../frontend/dist",
    "distDir": "../frontend/dist"
  },
  "package": {
    "productName": "agents-chatgroup",
    "version": "0.2.3-main.0"
  },
  "tauri": {
    "allowlist": {
      "all": false
    },
    "bundle": {
      "active": true,
      "targets": [
        "msi",
        "dmg",
        "appimage",
        "deb"
      ],
      "identifier": "com.agents-chatgroup.desktop",
      "icon": [
        "icons/icon-square.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "windows": {
        "wix": {
          "fragmentPaths": [
            "wix/fragments/agents-chatgroup-directory.wxs"
          ]
        }
      },
      "deb": {
        "files": {
          "/DEBIAN/postrm": "debian/postrm"
        }
      },
      "externalBin": [
        "bin/server"
      ]
    },
    "updater": {
      "active": true,
      "dialog": true,
      "endpoints": [
        "https://updates.agents-chatgroup.com/{{target}}/{{current_version}}"
      ],
      "pubkey": ""
    },
    "windows": [
      {
        "title": "agents-chatgroup",
        "width": 1920,
        "height": 1080,
        "minWidth": 1024,
        "minHeight": 640,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    }
  }
}
